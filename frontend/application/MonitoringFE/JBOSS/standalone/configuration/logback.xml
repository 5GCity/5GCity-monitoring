<configuration debug="false" scan="true" scanPeriod="30 seconds">
	<jmxConfigurator />

	<property file="${config.properties.file}" />

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %-5level [%X{tx:-none}@%X{DEST_TYPE}.%X{DEST}] %logger{0}:%L - %m%n%rEx</pattern>
		</encoder>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.core.filter.EvaluatorFilter">
			<evaluator>
				<expression>return mdc.get("serviceType") == "MEASURE";</expression>
			</evaluator>
			<OnMismatch>ACCEPT</OnMismatch>
			<OnMatch>DENY</OnMatch>
		</filter>		
		<file>${jboss.server.log.dir}/application.log</file>
		<encoder>
			<pattern>%d %-5level [%X{tx:-none}@%X{DEST_TYPE}.%X{DEST}] %logger{0}:%L - %m%n%rEx</pattern>
			<immediateFlush>true</immediateFlush>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${jboss.server.log.dir}/application.log.%i</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>10</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>25MB</maxFileSize>
		</triggeringPolicy>
	</appender>

	<appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="FILE" />
	</appender>

	<appender name="PERF_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<filter class="ch.qos.logback.core.filter.EvaluatorFilter">
			<evaluator>
				<expression>return mdc.get("serviceType") == "MEASURE";</expression>
			</evaluator>
			<OnMismatch>DENY</OnMismatch>
			<OnMatch>ACCEPT</OnMatch>
		</filter>
		<file>${jboss.server.log.dir}/measure.log</file>
		<encoder>
			<pattern>%d %-5level [%X{tx:-none}@%X{DEST_TYPE}.%X{DEST}] %logger{0}:%L - %m%n%rEx</pattern>
			<immediateFlush>true</immediateFlush>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${jboss.server.log.dir}/measure.log.%i</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>10</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>25MB</maxFileSize>
		</triggeringPolicy>
	</appender>


	<appender name="ASYNC_PERF_FILE" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="PERF_FILE" />
	</appender>

	<appender name="ACTIVITY_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${jboss.server.log.dir}/activity.log</file>
		<encoder>
			<pattern>%d - %m%n%rEx</pattern>
			<immediateFlush>true</immediateFlush>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${jboss.server.log.dir}/activity.log.%i</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>10</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>5MB</maxFileSize>
		</triggeringPolicy>
	</appender>

	<appender name="ASYNC_ACTIVITY_FILE" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="ACTIVITY_FILE" />
	</appender>

	<logger name="ACTIVITY_LOG" level="INFO" additivity="false">
		<appender-ref ref="ACTIVITY_FILE" />
	</logger>

	<logger name="COM_LOG" level="INFO" />
	<logger name="com.italtel" level="${log.level.app:-ERROR}" />
	<logger name="com.italtel.nm.om.app.ApplicationControlBean" level="DEBUG" />
	<logger name="org.flywaydb" level="INFO" />
	<logger name="org.quartz" level="${log.level.app:-ERROR}" />
	<logger name="org.quartz.core.QuartzSchedulerThread" level="ERROR" />
	
<!--
	<logger name="com.italtel.nm.om.sb.servicebus.connector.handler.CheckMessageServerHandler" level="ERROR" />
	<logger name="com.italtel.nm.om.sb.servicebus.connector.handler.PerformanceServerHandler" level="ERROR" />
	<logger name="com.italtel.nm.om.common.service.impl.PerformanceHandlerBean" level="ERROR" />
	<logger name="com.italtel.nm.om.common.observer.PerformanceObserver" level="ERROR" />
	<logger name="com.italtel.nm.om.common.entity.perf" level="ERROR" />
	<logger name="com.italtel.nm.om.common.service.impl.FaultHandlerBean" level="ERROR" />
-->
	<root level="${log.level.root:-ERROR}">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
		<appender-ref ref="PERF_FILE" />
	</root>

</configuration>